@base <https://w3id.org/MON/questionanswer.owl> .

<https://w3id.org/MON/questionanswer.owl> rdf:type owl:Ontology ;
                                          
                                          owl:imports <https://w3id.org/MON/action.owl> ,
                                                      <https://w3id.org/MON/language.owl> .


#################################################################
#
#    Object Properties
#
#################################################################


###  https://w3id.org/MON/language.owl#hasLanguage

<https://w3id.org/MON/language.owl#hasLanguage> rdf:type owl:ObjectProperty .



###  https://w3id.org/MON/questionanswer.owl#toQuestion

:toQuestion rdf:type owl:FunctionalProperty ,
                     owl:ObjectProperty ;
            
            rdfs:label "to question"@en ;
            
            rdfs:comment "It relates an Answer to the question it refers to."@en ;
            
            rdfs:domain :Answer ;
            
            rdfs:range :Question .





#################################################################
#
#    Data properties
#
#################################################################


###  https://w3id.org/MON/questionanswer.owl#textualContent

:textualContent rdf:type owl:DatatypeProperty ,
                         owl:FunctionalProperty ;
                
                rdfs:label "textual content"@en ;
                
                rdfs:comment "The textual content of something."@en ;
                
                rdfs:range rdfs:Literal .





#################################################################
